# =============================================================================
# Medical Booking Service - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values

# -----------------------------------------------------------------------------
# Bronivik Jr (Bot 1 - Device Booking)
# -----------------------------------------------------------------------------

# Telegram Bot Token (from @BotFather)
BOT_TOKEN=your_bot_token_here

# API Authentication Keys (comma-separated key:extra pairs)
API_AUTH_KEYS=key1:extra1,key2:extra2

# API Ports
API_HTTP_PORT=8080
API_GRPC_PORT=8081

# Google Sheets Integration (optional)
GOOGLE_SPREADSHEET_ID=

# -----------------------------------------------------------------------------
# Bronivik CRM (Bot 2 - Cabinet Booking)
# -----------------------------------------------------------------------------

# Telegram Bot Token for CRM bot
CRM_BOT_TOKEN=your_crm_bot_token_here

# API credentials for connecting to Bot 1 API
CRM_API_KEY=key1
CRM_API_EXTRA=extra1

# Manager Telegram IDs (comma-separated)
MANAGERS=123456789,987654321

# CRM Health check port
CRM_HEALTH_PORT=8090

# Google Sheets for CRM (optional)
CRM_GOOGLE_SPREADSHEET_ID=

# -----------------------------------------------------------------------------
# Shared Settings
# -----------------------------------------------------------------------------

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# Timezone
TZ=Europe/Moscow

# Redis URL (used internally by docker-compose)
# REDIS_URL=redis://redis:6379/0

# -----------------------------------------------------------------------------
# Monitoring (optional, activate with: docker-compose --profile monitoring up)
# -----------------------------------------------------------------------------

PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
